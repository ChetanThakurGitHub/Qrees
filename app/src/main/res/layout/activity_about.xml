<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qrees.activity.AboutActivity">

    <include
        android:id="@+id/layout_for_toolbar"
        layout="@layout/actionbar_layout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_312sdp"
        android:layout_below="@+id/layout_for_toolbar"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_80sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_field"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_12sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_50sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_title"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="@color/green"
                    android:textSize="@dimen/_14ssp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_dis"
                    android:fontFamily="@font/nunito_semibold"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_12ssp"
                    android:layout_gravity="center"/>

            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            app:cardCornerRadius="@dimen/_35sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/logo"/>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>
