<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_margin="@dimen/_5sdp"
    android:elevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/app_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_for_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chetan Thakur"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/tv_for_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sfsdfsdf"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="@dimen/_minus5sdp"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/textcolor"
                    android:maxLines="2"
                    android:fontFamily="@font/nunito_regular" />

                <TextView
                    android:id="@+id/tv_for_daystatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1 day ego"
                    android:maxLines="1"
                    android:layout_marginTop="@dimen/_minus2sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/timecolor"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <at.blogc.android.views.ExpandableTextView
                android:id="@+id/tv_for_caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/nunito_regular"
                android:text="sfjklsfjklsdjfdklsfjdklsfjldksjfklsdfjdklsfjklsdfjkldsfjkldsfjklsdfjkldsfjdklsfjjskldfjdklsfj"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_12ssp" />

            <RelativeLayout
                android:id="@+id/layour_for_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp">

                <ImageView
                    android:id="@+id/iv_for_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:background="@color/darkTransparent" />

                <ImageView
                    android:id="@+id/iv_for_playVideo"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/play"
                    android:padding="@dimen/_10sdp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_for_likeComm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_for_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:text="52"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/txt_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/like"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/nunito_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_for_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:text="10"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/txt_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/nunito_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_for_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_for_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:text="10"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/green" />

                    <TextView
                        android:id="@+id/txt_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/views"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/nunito_regular"/>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_for_lcs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                >

                <LinearLayout
                    android:id="@+id/layout_for_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_for_like"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/like" />

                    <TextView
                        android:id="@+id/tv_for_postlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="@string/like"
                        android:textSize="@dimen/_12ssp"
                        android:fontFamily="@font/nunito_regular" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_for_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_for_comment"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/comment" />

                    <TextView
                        android:id="@+id/tv_for_postComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:text="@string/comment"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/nunito_regular"
                        android:textSize="@dimen/_12ssp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_for_shar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_for_share"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/share" />

                    <TextView
                        android:id="@+id/tv_for_postShar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:text="@string/share"
                        android:fontFamily="@font/nunito_regular"
                        android:textSize="@dimen/_12ssp" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>