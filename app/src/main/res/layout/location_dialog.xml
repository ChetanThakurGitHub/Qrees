<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_250sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_40sdp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/dialog_full_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_margin="@dimen/_10sdp"
                android:text="location is required with high accuracy mode. Please check your moblie loction and retry"/>


            <LinearLayout
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_for_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dialog_btn_bg"
                    android:text="Cancel"
                    android:layout_gravity="center"
                    android:textColor="@color/textcolor"
                    android:fontFamily="@font/nunito_regular"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/btn_for_retry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/btn_for_cancel"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:background="@drawable/dialog_btn_bg"
                    android:textColor="@color/textcolor"
                    android:fontFamily="@font/nunito_regular"
                    android:textAllCaps="false"
                    android:text="Retry"/>

            </LinearLayout>



        </RelativeLayout>


    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/_35sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/logo" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
